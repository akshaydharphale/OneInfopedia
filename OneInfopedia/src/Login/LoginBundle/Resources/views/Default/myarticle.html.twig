{% extends 'base.html.twig' %}
{% block body %}
	<h2 class="page-header">My Articles</h2>
	<table class="table table-striped">
		<thead> 
		<tr> 
			{# <th>#</th>  #}
			<th>Title</th> 
			<th>Published Date</th> 
			<th>Category</th> 
		</tr> 
		</thead>

		<tbody>
			{% for article in articles %}
				<tr> 
					{# <th scope="row">*</th> #}
					<td>{{article.title}}</td>
					<td>{{article.publisheddate|date('F j,Y, g:i a')}}</td> 
					<td>{{article.tag }}</td>
					<td>
						<a href = "/viewarticle/{{article.articleid}}" class="btn btn-success">View</a>
						<a href = "/editarticle/{{article.articleid}}" class="btn btn-default">Edit</a>
						<a href = "/deletearticle/{{article.articleid}}" class="btn btn-danger">Delete</a>
					</td> 
				</tr> 
			{% endfor %}
		</tbody>
	</table>  
{% endblock %}