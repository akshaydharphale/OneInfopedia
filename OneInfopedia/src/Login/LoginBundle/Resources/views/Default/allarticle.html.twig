{% extends 'base.html.twig' %}


{% block body %}

	<h2 class="page-header">Explore Articles</h2>
	<table class="table table-striped">
		<thead> 
		<tr> 
			<th>Title</th> 
			<th>Author</th> 
			<th>Category</th> 
		</tr>
		</thead>

		<tbody>
			{% for article in articles %}
				<tr> 
					<td>{{article.title}}</td>
					<td>{{article.email}}</td> 
					<td>{{article.tag }}</td>
					<td>
						<a href = "/viewarticle/{{article.articleid}}" class="btn btn-success">View</a>
						<a href = "/contributearticle/{{article.articleid}}" class="btn btn-success">Contribute</a>
					</td> 
				</tr> 
			{% endfor %}
		</tbody>
	</table>  


{% endblock %}