<!-- signup.html.twig -->
<!DOCTYPE html>
<html>
<head>
    <!-- CSS ===================== -->
    <!-- load bootstrap -->
    <link rel="stylesheet" href="http://netdna.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.min.css"> 
    <style>
        body    { padding-top:30px; }
    </style>
    
    <!-- JS ===================== -->
    <!-- load angular -->
    <script src="http://code.angularjs.org/1.2.6/angular.js"></script> 
</head>


<body ng-app="validationApp" ng-controller="mainController">

    
    <!-- PAGE HEADER -->
    <div class="page-header"><h1>Infopedia Sign Up</h1></div>
    {% block container %}
		<div class="container">	
   
		    <!-- FORM -->
		    <!-- pass in the variable if our form is valid or invalid -->
		    <form name="userForm" method="POST" action="{{path('login_login_signup')}} " novalidate> 

		        <!-- EMAIL -->
		        <div class="form-group">
		            <label>Email</label>
		            <input type="email" name="email" class="form-control" ng-model="email">
		        </div>

		        <!-- NAME -->
		        <div class="form-group">
		            <label>Name</label>
		            <input type="text" name="name" class="form-control" ng-model="name">
		        </div>
		        
		        <!-- PASSWORD -->
		        <div class="form-group">
		            <label>Password</label>
		            <input type="password" name="password" class="form-control" ng-model="password" ng-minlength="3" ng-maxlength="18">
		        </div>

		        <!-- SUBMIT BUTTON -->
		        <button type="submit" class="btn btn-primary">Create Account</button>
		        <br>
		        <a href="{{path('login_login_homepage')}}">Go back to Sign In</a>

		        
		    </form>
    	</div>
    {% endblock %}



</body>
</html>






































